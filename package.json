{
  "name": "mini-todo-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:backend": "node backend/src/server.js",
    "dev:frontend": "cd frontend && vite",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && vite build",
    "test:backend": "cross-env NODE_ENV=test DB_FILE=backend/test-todos.sqlite node --test backend/tests/*.test.mjs",
    "test:frontend": "cd frontend && vitest --run",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend:coverage": "cd frontend && vitest --run --coverage",
    "test:backend:coverage": "cross-env NODE_ENV=test DB_FILE=backend/test-todos.sqlite c8 node --test backend/tests/*.test.mjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "c8": "^10.1.3",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "supertest": "^7.2.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
